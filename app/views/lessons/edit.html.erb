<h1> Edit "<%= @lesson.name %>" </h1>

<form action="/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_number">Lesson #</label>
  <textarea input id="lesson_number" name="number" type="integer" rows="1" cols="20"><%= @lesson.number %></textarea>
  <label for="lesson_name">Title</label>
  <textarea input id="lesson_name" name="name" type="string" rows="1" cols="50"><%= @lesson.name %></textarea>
  <p><label for="lesson_content">Content:</label></p>
  <p><textarea input id="lesson_contact" name="content" type="text" rows="30" cols="88"><%= @lesson.content %></textarea></p>
  <button>Update Lesson</button>
</form>

  <p><a href="/lessons/<%= @lesson.id %>"
      data-confirm="You're sure you want to do this?"
      data-method="delete"
      rel="nofollow">Delete Lesson</a></p>

<p><a href="/lessons">Return to lesson list</a></p>
